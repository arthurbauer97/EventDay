            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBiu8ta6VXDgdBkoDjZUC3w0bcY1UaxiQc" />

        <activity android:name="com.example.eventdayfinal.Activities.SplashScreenActivity"
            android:theme="@style/AppCompat.TelaCheia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.eventdayfinal.Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>